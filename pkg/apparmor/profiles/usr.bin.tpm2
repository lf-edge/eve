#include <tunables/global>

@{exec_path} = /usr/bin/tpm2
profile tpm2 @{exec_path} {
    #include <abstractions/base>

    # allow necessary access for operations
    /usr/bin/tpm2           rm,
    /jail/{,*,**}           rw,

    # allow access to tpm device
    /dev/tpm0               rw,
    /dev/tpmrm0             rw,
}
